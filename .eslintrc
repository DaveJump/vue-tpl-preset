{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      0,
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": 0
  }
}